#!/bin/env bash
source $HOME/.bash.d/support

prompt_line_one() {
printf $blue"["$reset
username
prompt_for_git
printf $blue"]"$reset
emblem
}

prompt_line_two() {
cwd
emblem
}

prompt_line_three() {
emblem
}

username() {
printf $purple
printf $USER
printf $reset
}

cwd() {
printf $red
printf $(pwd)
printf $reset
}

## Git
prompt_for_git() {
git --version > /dev/null 2>&1;
if [ "$?" -ne "0" ]; then \
  return
else
  source $HOME/.bash.d/git
fi
if [ -d .git ]; then
  prompt_for_git_branch
  prompt_for_git_stashes
  prompt_for_git_cleanliness
fi
}

prompt_for_rvm() {
# Check for RVM
if [ -f `which rvm` ]; then \
echo  "\[\e[0;32m\]Ruby: `rvm-prompt | cut -d "@" -f 1` | Gemset: `rvm gemset name | sed s:.*/::`"; fi
echo -n "\[\e[0;31m\]\w"
}

emblem() {
printf $teal
check_for_unicode âš¡ $
printf " "$reset
}

load_functions() {
prompt_line_one
#prompt_line_two
#prompt_line_three
}

PS1='$(load_functions)'
